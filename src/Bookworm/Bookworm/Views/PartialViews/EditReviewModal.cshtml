@model Bookworm.ViewModels.Books.BookViewModel

<!-- A modifiable modal for editing book reviews that have already been created by users -->

<div class="modal fade" id="editBookReviewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" align="center">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Edit Review</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="editReviewModalBody">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12 ml-auto"><h3><b>@Model.BookDetails.Title</b></h3></div>
                    </div>
                    <div class="row" margin-top="20px">
                        <div class="col-md-12 ml-auto"><h4><em>@Model.BookDetails.Authors</em></h4></div>
                    </div>

                    @using (Html.BeginForm("UpdateBookReview", "Books", FormMethod.Post, new { id = "form-editBookReview" }))
    {
                <div class="form-group">
                    <div class="row">
                        <div class="rating">
                            <label id="rating5Label">
                                <input type="radio" name="rating" onclick="updateRating(value);" value="5" title="5 stars" id="rating5"> 5
                            </label>
                            <label id="rating4Label">
                                <input type="radio" name="rating" onclick="updateRating(value);" value="4" title="4 stars" id="rating4"> 4
                            </label>
                            <label id="rating3Label">
                                <input type="radio" name="rating" onclick="updateRating(value);" value="3" title="3 stars" id="rating3"> 3
                            </label>
                            <label id="rating2Label">
                                <input type="radio" name="rating" onclick="updateRating(value);" value="2" title="2 stars" id="rating2"> 2
                            </label>
                            <label id="rating1Label">
                                <input type="radio" name="rating" onclick="updateRating(value);" value="1" title="1 star" id="rating1"> 1
                            </label>
                        </div>
                    </div>
                    @Html.HiddenFor(m => m.BookReview.Rating, new { id = "Rating" })
                </div>
                <div class="form-group">
                    <div class="row">
                        Description:
                        <div class="modal-body">
                            @if (@Model.BookReview.Description != null)
                            {
        //                 @Html.TextArea(@Model.BookReview.Description, @Model.BookReview.Description, new { Value = @Model.BookReview.Description, id = "Description", @class = "form-control", @rows = "11", @cols = "25" })
                                 @Html.TextAreaFor(m => m.BookReview.Description, new { id = "Description", @class = "form-control", @rows = "11", @cols = "25" })
                            }
                            else
                            {
                                @Html.TextAreaFor(m => m.BookReview.Description, new { id = "Description", @class = "form-control", @rows = "11", @cols = "25" })
                            }
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.HiddenFor(model => model.BookDetails.BookId, new { id = "BookId", Value = @Model.BookDetails.BookId })
                </div>
                <div class="form-group">
                    @Html.HiddenFor(model => model.BookReview.UserId, new { id = "UserId", Value = @Model.BookReview.UserId })
                </div>

                <div class="form-group">
                    @Html.HiddenFor(model => model.BookReview.ReviewId, new { id = "ReviewId", Value = @Model.BookReview.ReviewId })
                </div>

                <div class="modal-footer" align="center">
                    <button type="button" class="btn btn-lg btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-lg btn-primary">Submit Review</button>
                </div>
}
                    <div id="result"></div>
                </div>
            </div>
        </div>

    </div>
</div>