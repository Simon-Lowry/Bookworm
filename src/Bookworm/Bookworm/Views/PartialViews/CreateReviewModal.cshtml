@model Bookworm.ViewModels.Books.BookViewModel

<!-- A modal for creating book reviews for books have already been created by users -->

<div class="modal fade" id="createBookReviewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" align="center">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Create a Review</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="createBookReviewModalBody">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12 ml-auto"><h3><b>@Model.BookDetails.Title</b></h3></div>
                    </div>
                    <div class="row" margin-top="20px">
                        <div class="col-md-12 ml-auto"><h4><em>@Model.BookDetails.Authors</em></h4></div>
                    </div> <br />

                    @using (Html.BeginForm("CreateBookReview", "Books", FormMethod.Post, new { id = "form-createBookReview" }))
                    {
                        <div class="form-group">
                            <div class="rating">
                                <label>
                                    <input type="radio" name="rating" onclick="updateRating(value);" value="5" title="5 stars"> 5
                                </label>
                                <label>
                                    <input type="radio" name="rating" onclick="updateRating(value);" value="4" title="4 stars"> 4
                                </label>
                                <label>
                                    <input type="radio" name="rating" onclick="updateRating(value);" value="3" title="3 stars"> 3
                                </label>
                                <label>
                                    <input type="radio" name="rating" onclick="updateRating(value);" value="2" title="2 stars"> 2
                                </label>
                                <label>
                                    <input type="radio" name="rating" onclick="updateRating(value);" value="1" title="1 star"> 1
                                </label>
                            </div>
                            @Html.HiddenFor(m => m.BookReview.Rating, new { id = "Rating" })
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <h4>Description:</h4>
                                <div class="modal-body">
                                    @Html.TextAreaFor(m => m.BookReview.Description, new { id = "Description", @class = "form-control", @rows = "11", @cols = "25" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.HiddenFor(model => model.BookDetails.BookId, new { id = "BookId", Value = @Model.BookDetails.BookId })
                        </div>
                        <div class="form-group">
                            @Html.HiddenFor(model => model.BookReview.UserId, new { id = "UserId", Value = @Model.BookReview.UserId })

                        </div>


                        <div class="modal-footer" align="center">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Submit Review</button>
                        </div>
                    }
                    <div id="result"></div>
                </div>
            </div>
        </div>

    </div>
</div>