 @model Bookworm.ViewModels.Home.UserLoginViewModel 

@{
    ViewBag.Title = "Login Page";
}


<body background="/Images/Home/books.jpg">

@Html.Partial("~/Views/PartialViews/Navbars/NotLoggedInNavBar.cshtml")
<div class="container">
    <div class="row" style="margin-top: 120px">
        <div class="col-lg-1 col-md-1 col-sm-1"> </div>
        <div class="col-lg-10 col-md-10 col-sm-10">
            <br/>
            @using (Html.BeginForm("AttemptLogin", "Login", FormMethod.Post))
            {
                <h2 align="center" style="color: white;">Login</h2>
                <hr class="colorgraph">
                <div align="center">
                    @Html.TextBoxFor(model => model.Email, new {placeholder = "Email Address", @class = "form-control input-lg"})

                </div>
                <br/>
                <div align="center">
                    @Html.TextBoxFor(model => model.Password, new {placeholder = "Password", @class = "form-control input-lg", @type = "password"})
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
                <hr class="colorgraph">
                <div class="row" align="center">
                    <div class="col-lg-2 col-xs-2 col-sm-2 col-md-2"></div>
                    <div class="col-lg-4 col-xs-4 col-sm-4 col-md-4">
                        <input type="submit" class="btn btn-lg btn-success btn-block" value="Login">
                    </div>
                    <div class="col-lg-4 col-xs-4 col-sm-4 col-md-4">
                        <a href="/SignUp/SigningUp" class="btn btn-lg btn-primary btn-block">Sign Up</a>
                    </div>
                </div>
                <a href="" class="btn btn-link pull-right">Forgot Password?</a>
            }
            <br/><br/>
        </div>
    </div>
</div>
</body>
